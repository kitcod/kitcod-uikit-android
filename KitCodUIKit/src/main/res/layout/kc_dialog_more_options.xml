<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_bottomsheet_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_post_label"
            style="@style/KitcodDarkMed20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="More options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_view" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="@dimen/kitcod_eight"
            android:paddingBottom="@dimen/kitcod_eight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_post_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_label">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_grey"
                android:padding="@dimen/kitcod_eight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_announcement_icon" />

            <TextView
                android:id="@+id/tv_image_title"
                style="@style/KitcodDarkMed16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Image"
                app:layout_constraintStart_toEndOf="@+id/iv_image"
                app:layout_constraintTop_toTopOf="@+id/iv_image" />

            <TextView
                android:id="@+id/tv_image_desc"
                style="@style/KitcodLightReg14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add images to your post"
                app:layout_constraintStart_toStartOf="@+id/tv_image_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_image_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="@dimen/kitcod_eight"
            android:paddingBottom="@dimen/kitcod_eight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cl_image"
            app:layout_constraintTop_toBottomOf="@+id/cl_image">

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_grey"
                android:padding="@dimen/kitcod_eight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_announcement_icon" />

            <TextView
                android:id="@+id/tv_video_title"
                style="@style/KitcodDarkMed16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Video"
                app:layout_constraintStart_toEndOf="@+id/iv_video"
                app:layout_constraintTop_toTopOf="@+id/iv_video" />

            <TextView
                android:id="@+id/tv_video_desc"
                style="@style/KitcodLightReg14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add video link to your post"
                app:layout_constraintStart_toStartOf="@+id/tv_video_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_video_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="@dimen/kitcod_eight"
            android:paddingBottom="@dimen/kitcod_eight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cl_video"
            app:layout_constraintTop_toBottomOf="@id/cl_video">

            <ImageView
                android:id="@+id/iv_audio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_grey"
                android:padding="@dimen/kitcod_eight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_post_icon_bg" />

            <TextView
                android:id="@+id/tv_audio_title"
                style="@style/KitcodDarkMed16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Audio"
                app:layout_constraintStart_toEndOf="@+id/iv_audio"
                app:layout_constraintTop_toTopOf="@+id/iv_audio" />

            <TextView
                android:id="@+id/tv_audio_desc"
                style="@style/KitcodLightReg14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add audio files to your post"
                app:layout_constraintStart_toStartOf="@+id/tv_audio_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_audio_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="@dimen/kitcod_eight"
            android:paddingBottom="@dimen/kitcod_eight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cl_audio"
            app:layout_constraintTop_toBottomOf="@id/cl_audio">

            <ImageView
                android:id="@+id/iv_cta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_grey"
                android:padding="@dimen/kitcod_eight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_poll_icon_bg" />

            <TextView
                android:id="@+id/tv_button_title"
                style="@style/KitcodDarkMed16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Button"
                app:layout_constraintStart_toEndOf="@+id/iv_cta"
                app:layout_constraintTop_toTopOf="@+id/iv_cta" />

            <TextView
                android:id="@+id/tv_button_desc"
                style="@style/KitcodLightReg14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a button to your post"
                app:layout_constraintStart_toStartOf="@+id/tv_button_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_button_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>